{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "target": "ES2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["jest"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src", "__tests__", "src/functions/legacy/legacy.d.ts"],
  "exclude": ["node_modules", "dist"]
}
