{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "src/*": ["src/*"]
    },
    "checkJs": true,
    "target": "ES2022",
    "module": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"],
    "isolatedModules": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/remark", "dist", "**/__*__/**"]
}
