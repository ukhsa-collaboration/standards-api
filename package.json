{
  "name": "@ukhsa-collaboration/api-styleguide",
  "version": "0.4.1",
  "description": "UKHSA Redocly API styleguide",
  "main": "redocly.yaml",
  "type": "module",
  "scripts": {
    "build": "tsc && mv dist/redocly/plugin.js dist/redocly/plugin.cjs",
    "fmt:md": "remark . --ext .md --output",
    "lint:md": "remark . --ext .md --frail",
    "pretest": "npm run build",
    "pretest:watch": "npm run build",
    "prepare": "husky && git config commit.template .gitmessage",
    "start": "docker run --rm --pull=always -p \"8080:8080\" -v \"./docs:/site/docs/api-design-guidelines\" ghcr.io/ukhsa-collaboration/standards-org:latest",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ukhsa-collaboration/standards-api.git"
  },
  "homepage": "https://ukhsa-collaboration.github.io/standards-org/api-design-guidelines/",
  "license": "MIT",
  "engines": {
    "npm": ">=10",
    "node": ">=20.17.0"
  },
  "keywords": [
    "UKHSA",
    "redocly",
    "styleguide",
    "ruleset"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@redocly/cli": "^1.34.6",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "cpx2": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.1",
    "tslib": "^2.8.1",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-renumber-references": "^3.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0"
  }
}
