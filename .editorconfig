# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[{*,*.{js, mjs, json, md, ts, yaml, yml}}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
quote_type = single

[*.js]
max_line_length = 88
